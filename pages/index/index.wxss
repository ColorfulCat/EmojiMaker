/* 文本展示区域 */
.text-display {
  width: 100%;
  min-height: 88rpx;
  max-height: 132rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  position: relative;
  box-sizing: border-box;
  transition: all 0.3s ease;
  overflow-y: auto;
}

.text-display.caption {
  min-height: 72rpx;
  max-height: 72rpx;
}

.text-display::-webkit-scrollbar {
  width: 4rpx;
  background: transparent;
}

.text-display::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 2rpx;
}

.text-display:active {
  background: rgba(255, 255, 255, 0.08);
}

.display-text {
  font-size: 28rpx;
  color: #fff;
  line-height: 40rpx;
  word-break: break-all;
  display: block;
  white-space: pre-wrap;
}

.display-text.placeholder {
  color: rgba(255, 255, 255, 0.3);
}

/* 编辑弹窗 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.edit-content {
  width: 90%;
  max-height: 80vh;
  background: #1a1a2e;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.edit-header {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.edit-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
  text-align: center;
}

.edit-body {
  flex: 1;
  overflow-y: auto;
  padding: 0 4rpx;
  margin-bottom: 32rpx;
}

.edit-field {
  margin-bottom: 32rpx;
}

.edit-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.edit-textarea {
  width: 100%;
  min-height: 200rpx;
  max-height: 400rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #fff;
  line-height: 1.6;
}

.edit-input {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #fff;
}

.edit-footer {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0;
}

.edit-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.edit-btn.cancel {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.9);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.edit-btn.confirm {
  background: linear-gradient(135deg, #409eff 0%, #3482d1 100%);
  color: #ffffff;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(64, 158, 255, 0.3);
}

.edit-btn:active {
  transform: scale(0.96);
  opacity: 0.8;
}

/* 优化滚动条样式 */
.edit-body::-webkit-scrollbar {
  width: 4rpx;
  background: transparent;
}

.edit-body::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 2rpx;
}

/* 编辑标签行样式 */
.edit-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

/* 清空文本按钮样式 */
.clear-text-btn {
  padding: 8rpx 20rpx;
  transition: all 0.3s ease;
}

.clear-text-btn text {
  font-size: 24rpx;
  color: #f56c6c;
}

.clear-text-btn:active {
  opacity: 0.8;
}

/* 禁用状态样式 */
.text-display.disabled {
  opacity: 0.6;
  pointer-events: none;
  cursor: not-allowed;
}

/* 点击反馈效果 */
.text-hover {
  transform: scale(0.99);
  background: rgba(0, 0, 0, 0.25);
}