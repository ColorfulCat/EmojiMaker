/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  overflow: hidden;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 20px;
  box-sizing: border-box;
}

/* 魔法星星背景 */
.magic-stars {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(2px 2px at 20px 30px, #ffffff, rgba(0,0,0,0)),
    radial-gradient(2px 2px at 40px 70px, #ffffff, rgba(0,0,0,0)),
    radial-gradient(2px 2px at 50px 160px, #ffffff, rgba(0,0,0,0));
  background-size: 200px 200px;
  animation: sparkle 5s linear infinite;
}

@keyframes sparkle {
  from { background-position: 0 0; }
  to { background-position: 200px 200px; }
}

/* 卡片翻转动画 */
.card-wrapper {
  perspective: 1000px;
  margin: 40rpx 0;
  margin-top: 188rpx;
  animation: float 3s ease-in-out infinite;
}

.card-wrapper.flipping .emoji-preview {
  transform: rotateY(360deg);
}

.card-wrapper.shake {
  animation: shake 0.5s;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  20%, 60% { transform: translateX(-10px); }
  40%, 80% { transform: translateX(10px); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.emoji-preview {
  width: 600rpx;
  height: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  margin: 20px 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  transition: transform 1s;
  transform-style: preserve-3d;
  box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
  border: 1px solid rgba(255, 255, 255, 0.18);
  cursor: pointer;
}

.emoji-image {
  width: 90%;
  height: 90%;
  border-radius: 16rpx;
  transition: transform 0.3s ease;
}

.emoji-image.generating {
  animation: pulse 1.3s ease-in-out infinite;
}

@keyframes pulse {
  0% { transform: scale(0.95); }
  50% { transform: scale(1.05); }
  100% { transform: scale(0.95); }
}

.magic-glow {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: linear-gradient(45deg, #ff3d00, #00c853, #2196f3);
  opacity: 0.2;
  filter: blur(20px);
  animation: glow 3s linear infinite;
}

@keyframes glow {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.input-section {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: auto;
}

.text-input, .caption-input {
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10px);
}

.caption-input {
  height: 100rpx;
  margin-bottom: 32rpx;
  font-size: 26rpx;
}

.placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.btn-container {
  width: 100%;
  padding: 0 20rpx;
}

.generate-btn {
  width: 100% !important;
  height: 96rpx;
  background: linear-gradient(45deg, #ff3d00, #00c853);
  color: white;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border: none;
  transition: transform 0.3s ease;
}

.btn-hover {
  transform: scale(0.95);
}

.magic-sparkle {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transform: translateX(-100%);
  animation: sparkle-move 2s linear infinite;
}

@keyframes sparkle-move {
  100% { transform: translateX(100%); }
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.emoji-preview:active .preview-hint {
  opacity: 1;
}

.preview-hint text {
  color: white;
  font-size: 24rpx;
}

/* 生成中蒙层 */
.generating-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 24rpx;
  z-index: 10;
}

.generating-mask text {
  color: white;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #ffffff;
  border-top: 6rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 禁用状态样式 */
.text-input[disabled] {
  opacity: 0.7;
  cursor: not-allowed;
}

.generate-btn.disabled {
  opacity: 0.7;
  background: linear-gradient(45deg, #999, #666);
  cursor: not-allowed;
}

.generate-btn.disabled .magic-sparkle {
  display: none;
}

/* 历史记录按钮 */
.history-btn {
  width: 100%;
  padding: 16rpx 0;
  margin-bottom: 20rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.history-btn text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.history-btn:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.98);
}

/* 历史记录弹窗 */
.history-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.history-modal.show {
  opacity: 1;
  visibility: visible;
}

.history-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80%;
  background: #1a1a2e;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  box-sizing: border-box;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.history-modal.show .history-content {
  transform: translateY(0);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  color: #fff;
  font-size: 32rpx;
}

.close-btn {
  font-size: 48rpx;
  color: #fff;
  padding: 0 20rpx;
}

.history-list {
  height: calc(100% - 80rpx);
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.history-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.history-info {
  flex: 1;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}

.history-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
  text-align: center;
}

.apply-btn {
  color: #4CAF50;
  border: 1px solid #4CAF50;
}

.delete-btn {
  color: #ff4d4f;
  border: 1px solid #ff4d4f;
}

.history-prompt {
  color: #fff
}
.history-caption {
  color: #fff
}
.history-time {
  color: #fff
}

/* 顶部按钮区域 */
.top-actions {
  width: 100%;
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.action-btn text {
  color: #fff;
  font-size: 26rpx;
}

.action-btn .iconfont {
  font-size: 32rpx;
  margin-right: 4rpx;
}

.action-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.1));
}

.random-btn {
  border-color: rgba(64, 158, 255, 0.3);
}

.history-btn {
  border-color: rgba(103, 194, 58, 0.3);
}

/* 输入框样式 */
.text-input {
  width: 100%;
  height: 200rpx; /* 增加输入框高度 */
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10px);
}

.caption-input {
  height: 100rpx;
  margin-bottom: 32rpx;
  font-size: 26rpx;
}