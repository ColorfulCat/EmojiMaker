/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  overflow: hidden;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 0 20px;
  box-sizing: border-box;
  overflow: hidden;
}

/* 魔法星星背景 */
.magic-stars {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(2px 2px at 20px 30px, #ffffff, rgba(0,0,0,0)),
    radial-gradient(2px 2px at 40px 70px, #ffffff, rgba(0,0,0,0)),
    radial-gradient(2px 2px at 50px 160px, #ffffff, rgba(0,0,0,0));
  background-size: 200px 200px;
  animation: sparkle 5s linear infinite;
}

@keyframes sparkle {
  from { background-position: 0 0; }
  to { background-position: 200px 200px; }
}

/* 卡片翻转动画 */
.card-wrapper {
  perspective: 1000px;
  margin: 188rpx 0 40rpx;
  animation: float 2s ease-in-out infinite;
}

.card-wrapper.flipping .emoji-preview {
  transform: rotateY(360deg);
}

.card-wrapper.shake {
  animation: shake 0.5s;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  20%, 60% { transform: translateX(-10px); }
  40%, 80% { transform: translateX(10px); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.emoji-preview {
  width: 600rpx;
  height: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  margin: 20px 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  transition: transform 1s;
  transform-style: preserve-3d;
  box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
  border: 1px solid rgba(255, 255, 255, 0.18);
  cursor: pointer;
}

.emoji-image {
  width: 92%;
  height: 92%;
  border-radius: 16rpx;
  transition: transform 0.3s ease;
}

.emoji-image.generating {
  animation: pulse 1.3s ease-in-out infinite;
}

@keyframes pulse {
  0% { transform: scale(0.95); }
  50% { transform: scale(1.05); }
  100% { transform: scale(0.95); }
}

.magic-glow {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: linear-gradient(45deg, #ff3d00, #00c853, #2196f3);
  opacity: 0.2;
  filter: blur(20px);
  animation: glow 3s linear infinite;
}

@keyframes glow {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.input-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 24rpx;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.text-input, .caption-input {
  width: 100%;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  color: #ffffff;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
  padding: 20rpx 70rpx 20rpx 20rpx !important;
}

/* 主输入框样式 */
.text-input {
  height: 160rpx;
  font-size: 30rpx;
  margin-top: 0;
  margin-bottom: 16rpx;
  line-height: 1.6;
  padding: 16rpx 20rpx;
}

/* 配文输入框样式 */
.caption-input {
  height: 78rpx;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  line-height: 1.5;
  padding: 0 20rpx;
}

/* 输入框焦点状态 */
.text-input:focus, .caption-input:focus {
  background: rgba(255, 255, 255, 0.15);
  border-color: rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.1);
}

/* 输入框占位符样式 */
.placeholder {
  color: rgba(255, 255, 255, 0.3);
  font-size: 28rpx;
}

/* 禁用状态样式 */
.text-input[disabled], .caption-input[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 魔法边框动画 */
@keyframes borderGlow {
  0% { border-color: rgba(255, 255, 255, 0.1); }
  50% { border-color: rgba(255, 255, 255, 0.3); }
  100% { border-color: rgba(255, 255, 255, 0.1); }
}

.text-input:focus, .caption-input:focus {
  animation: borderGlow 2s infinite;
}

.btn-container {
  width: 100%;
  padding: 0 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.generate-btn {
  width: 100% !important;
  height: 100rpx;
  background: linear-gradient(45deg, #ff3d00, #00c853);
  color: white;
  border-radius: 48rpx;
  font-size: 36rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border: none;
  transition: transform 0.3s ease;
}

.btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
}

.magic-sparkle {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transform: translateX(-100%);
  animation: sparkle-move 2s linear infinite;
}

@keyframes sparkle-move {
  100% { transform: translateX(100%); }
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.emoji-preview:active .preview-hint {
  opacity: 1;
}

.preview-hint text {
  color: white;
  font-size: 24rpx;
}

/* 生成中蒙层 */
.generating-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 24rpx;
  z-index: 10;
}

.generating-mask text {
  color: white;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #ffffff;
  border-top: 6rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

